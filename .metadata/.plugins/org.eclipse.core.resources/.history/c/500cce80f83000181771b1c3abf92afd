import java.util.Scanner;

public class JieMi { 
	public static void main (String []args) {
		System.out.println("请输入要破译的密文:");
		Scanner scanner=new Scanner(System.in);
		String ss=scanner.nextLine();
		char[] test=ss.toCharArray();
		System.out.println("破译后的密文为：");
		for(int i=0;i<test.length;i++) {
			if(test[i]==test[0]) {
				char cc=(char) (test[i]+3);
				System.out.println(cc);
			}
			if(test[i]==test[1]) {
				char cc=(char)(test[i]+4);
				System.out.println(cc);
			}
			if(test[i]==test[2]) {
				char cc=(char)(test[i]+2);
				System.out.println(cc);
			}
			
			if(test[i]==test[3]) {
				char cc=(char)(test[i]+4);
				System.out.println(cc);
			}
			
			if(test[i]==test[4]) {
				char cc=(char)(test[i]+15);
				System.out.println(cc);
			}
			
			if(test[i]==test[5]) {
				char cc=(char)(test[i]+19);
				System.out.println(cc);
			}
			
			if(test[i]==test[6]) {
				char cc=(char)(test[i]+8);
				System.out.println(cc);
			}
			
			if(test[i]==test[7]) {
				char cc=(char)(test[i]+21);
				System.out.println(cc);
			}
			
			if(test[i]==test[8]) {
				char cc=(char)(test[i]+3);
				System.out.println(cc);
			}
			
			
			
			
			
			
		}
		
		
	}

}
